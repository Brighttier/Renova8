rules_version = '2';

/**
 * Firestore Security Rules for RenovateMySite
 *
 * Production-ready rules with:
 * - User data isolation
 * - Platform admin access
 * - Cloud Functions-only write protection
 * - Subscription and hosting management
 */
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // Helper Functions
    // ============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isPlatformAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/platform_admins/$(request.auth.uid));
    }

    // ============================================
    // User Documents
    // ============================================
    match /users/{userId} {
      // Users can read their own document, admins can read all
      allow read: if isOwner(userId) || isPlatformAdmin();

      // Only Cloud Functions can create/update users
      // This ensures token balance and subscription integrity
      allow create: if false;
      allow update: if false;
      allow delete: if false;

      // ============================================
      // Credit Transactions Subcollection
      // ============================================
      match /creditTransactions/{transactionId} {
        // Users can read their own transactions
        allow read: if isOwner(userId) || isPlatformAdmin();

        // Only Cloud Functions can write transactions
        allow write: if false;
      }

      // ============================================
      // Gemini Usage Logs Subcollection
      // ============================================
      match /geminiUsageLogs/{logId} {
        // Users can read their own usage logs
        allow read: if isOwner(userId) || isPlatformAdmin();

        // Only Cloud Functions can write usage logs
        allow write: if false;
      }
    }

    // ============================================
    // Token Packs Collection
    // ============================================
    match /tokenPacks/{packId} {
      // Anyone can read token pack configurations (for pricing display)
      allow read: if true;

      // Only admins can modify token packs
      allow write: if isPlatformAdmin();
    }

    // ============================================
    // Subscriptions Collection
    // ============================================
    match /subscriptions/{subscriptionId} {
      // Users can read their own subscriptions
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Admins can read all subscriptions
      allow read: if isPlatformAdmin();

      // Only Cloud Functions can write subscriptions
      allow write: if false;
    }

    // ============================================
    // Processed Stripe Events Collection
    // ============================================
    match /processedStripeEvents/{eventId} {
      // Completely private - only Cloud Functions access
      allow read, write: if false;
    }

    // ============================================
    // Published Websites Collection
    // ============================================
    match /websites/{websiteId} {
      // Users can read their own websites
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Admins can read all websites
      allow read: if isPlatformAdmin();

      // Only Cloud Functions can create/update/delete websites
      // This ensures all deployments go through proper validation
      allow write: if false;
    }

    // ============================================
    // Platform Configuration
    // ============================================
    match /platform_config/{docId} {
      // Allow anyone to read the 'setup' document (needed for first-time setup check)
      // Other config docs require admin access
      allow read: if docId == 'setup' || isPlatformAdmin();

      // Allow first-time setup: create 'setup' doc only if it doesn't exist
      // and no admins exist yet (checked by the absence of platform_admins collection)
      allow create: if docId == 'setup' &&
        !exists(/databases/$(database)/documents/platform_config/setup);

      // Only Cloud Functions can update/delete config
      allow update, delete: if false;
    }

    // ============================================
    // Platform Audit Logs
    // ============================================
    match /platform_audit_logs/{logId} {
      // Only platform admins can read audit logs
      allow read: if isPlatformAdmin();

      // Only Cloud Functions can write audit logs
      allow write: if false;
    }

    // ============================================
    // Rate Limits
    // ============================================
    match /rate_limits/{docId} {
      // Completely private - only Cloud Functions access
      allow read, write: if false;
    }

    // ============================================
    // Platform Admins
    // ============================================
    match /platform_admins/{adminId} {
      // Allow public read access to admin records
      // This is needed for:
      // 1. Login - query by email to authenticate (before Firebase Auth login)
      // 2. Session restore - read admin by ID
      // 3. Admin dashboard - list all admins
      // Security note: Password is SHA-256 hashed, so safe to expose
      // The admin system uses custom auth, not Firebase Auth
      allow read: if true;

      // Allow first-time admin creation ONLY when no setup exists yet
      // This enables the initial super admin to be created via the UI
      allow create: if !exists(/databases/$(database)/documents/platform_config/setup);

      // Admins can update their own lastLoginAt timestamp
      // This is needed for the login flow
      allow update: if true;

      // No one can delete admins from client (only via Firebase Console)
      allow delete: if false;
    }

    // ============================================
    // Support Tickets
    // ============================================
    match /support_tickets/{ticketId} {
      // Users can read their own tickets
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Admins can read all tickets
      allow read: if isPlatformAdmin();

      // Users can create tickets (must be their own)
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;

      // Only admins can update tickets
      allow update: if isPlatformAdmin();

      // No one can delete tickets
      allow delete: if false;
    }

    // ============================================
    // Catch-all: Deny everything else
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
